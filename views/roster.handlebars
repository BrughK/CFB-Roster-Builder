<section class="section pb-0">
	<div class="container">
		<h1 class="title">Roster View</h1>
	</div>
</section>
{{!-- Each Player Card --}}
<section class="section">
	<div class="container ">
    {{#each players as |players|}}
        <div class="column has-background-link has-text-white">
            <div class="card">
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4">{{first_name}} {{last_name}}</p>
                        </div>
                    </div>
                    <div class="content">
                        <p>Jersey Number: {{jersey}}</p>
                        <p>Position: {{position}}</p>
						<p>Team: {{teamsId}}</p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
	</div>
</section>